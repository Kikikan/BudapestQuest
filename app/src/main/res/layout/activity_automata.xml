<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActionCards.AutomataAct">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="36dp"
            android:layout_marginBottom="30dp"
            android:text="BKV Automata" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <TextView
                            android:id="@+id/jegyar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="25dp"
                            android:layout_marginBottom="5dp" />

                        <EditText
                            android:id="@+id/AutomataDB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:hint="Mennyi vonaljegyet veszel?"
                            android:inputType="numberDecimal"
                            android:singleLine="false" />

                        <Button
                            android:id="@+id/munkaButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:onClick="ButtonAutomataBuy"
                            android:text="VÃ©tel"/>

                        <TextView
                            android:id="@+id/statom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="16dp"
                            android:layout_marginBottom="5dp" />
                </LinearLayout>
        </ScrollView>
</LinearLayout>