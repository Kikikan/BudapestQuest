<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActionCards.KaszinoAct">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="36dp"
        android:layout_marginBottom="30dp"
        android:text="Kaszinó" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <EditText
        android:id="@+id/osszeg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:hint="Mennyit akarsz feltenni?"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <TextView
        android:id="@+id/pokerodds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginTop="5dp" />
    <Button
        android:id="@+id/pokergomb"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Póker"
        android:onClick="ButtonPoker"/>

    <TextView
        android:id="@+id/rulettodds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/rulettgomb"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rulett"
        android:onClick="ButtonRulett"/>

    <TextView
        android:id="@+id/blackjackodds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/blackjackgomb"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Black Jack"
        android:onClick="ButtonJack"
        />

    <TextView
        android:id="@+id/statom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:layout_marginBottom="5dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>